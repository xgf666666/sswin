<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.order.ConfirmActivity">

    <RelativeLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@mipmap/right_arrows" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_type_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_confirm_type_bg_1"
                android:gravity="center"
                android:text="@string/confirt_type_1"
                android:textColor="@color/selector_text_confirm" />

            <TextView
                android:id="@+id/tv_type_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_confirm_type_bg_2"
                android:gravity="center"
                android:text="@string/confirt_type_2"
                android:textColor="@color/selector_text_confirm" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ll_detail"
        android:background="@color/lightgray" />

    <LinearLayout
        android:id="@+id/ll_detail"
        android:orientation="vertical"
        android:layout_below="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/home_btn_mine"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/h6" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_name"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/tv_name"
                android:ellipsize="end"
                android:maxLength="14"
                android:textColor="@color/black"
                android:textSize="@dimen/h6" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_name"
                android:layout_below="@+id/tv_name"
                android:layout_marginStart="0dp"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/home_btn_address"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/gray"
                android:textSize="@dimen/h6" />

            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="@string/selector_address"
                android:textColor="#000000"
                android:textSize="@dimen/h4"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:src="@mipmap/home_btn_rightarrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/detail_2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/ll_top"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingStart="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/home_btn_mine"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/h6"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_phone_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_name_2"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/tv_name_2"
                android:ellipsize="end"
                android:maxLength="14"
                android:textColor="@color/black"
                android:textSize="@dimen/h6"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_address_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_name_2"
                android:layout_below="@+id/tv_name_2"
                android:layout_marginStart="0dp"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/home_btn_address"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/gray"
                android:textSize="@dimen/h6"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_hint_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="@string/collection_address"
                android:textColor="#000000"
                android:textSize="@dimen/h4" />

            <ImageView
                android:id="@+id/iv_go_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:src="@mipmap/home_btn_rightarrow" />

        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/ll_detail">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_car_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
            <LinearLayout
                android:id="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_below="@+id/rcv_car_goods"
                android:paddingTop="10dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">
                    <TextView
                        android:id="@+id/allPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_margin="10dp"
                        android:text="@string/goodsPay"
                        android:textColor="@color/black"
                        android:textSize="@dimen/h6"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv_allPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/allPay"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/h6"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/lightgray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">
                    <TextView
                        android:id="@+id/order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_margin="10dp"
                        android:text="@string/goodsPay_buzhu"
                        android:textColor="@color/black"
                        android:textSize="@dimen/h6"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv_order_buzhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/order"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/h6"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/lightgray" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">
                <TextView
                    android:id="@+id/carriage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/carriage"
                    android:textColor="@color/black"
                    android:textSize="@dimen/h6"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_carriage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/carriage"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/red"
                    android:textSize="@dimen/h6"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/lightgray" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">
                    <TextView
                        android:id="@+id/carriage_buzhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/carriage_buzhu"
                        android:textColor="@color/black"
                        android:textSize="@dimen/h6"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv_carriage_buzhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/carriage_buzhu"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/h6"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="@string/shouldPay"
            android:textColor="@color/black"
            android:textSize="@dimen/h6" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/money"
            android:layout_toStartOf="@+id/submit_order"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/red"
            android:textSize="@dimen/h6"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/submit_order"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@color/red"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/submitOrder"
            android:textColor="@color/white"
            android:textSize="@dimen/h6" />

    </RelativeLayout>


</RelativeLayout>