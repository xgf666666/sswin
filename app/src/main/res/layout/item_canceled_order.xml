<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_down_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="12sp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorText"
            android:visibility="invisible"
            android:text="14:36后订单自动取消"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_12"
            android:gravity="right|center_vertical"
            android:paddingRight="15dp"
            android:text="@string/del_cancel"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/tv_order_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:textColor="@color/colorText"
            android:text="共2件商品 合计: $1888.00 (含运费$10.00)"/>
        <!--<Button
            android:id="@+id/btn_pay"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/select_btn_side_red_bg_r1000"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_14"
            android:layout_below="@+id/tv_order_describe"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="@string/tv_btn_pay"/>-->
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/select_btn_side_gray_bg_r1000"
            android:textSize="14sp"
            android:layout_below="@+id/tv_order_describe"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:text="@string/delete_order"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorGray"/>

</LinearLayout>