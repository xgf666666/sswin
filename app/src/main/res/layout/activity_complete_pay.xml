<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    tools:context=".module.order.CompletePay">

    <include layout="@layout/item_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@mipmap/home_btn_paymentsuccessful" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/complete_pay"
            android:textColor="@color/black"
            android:textSize="@dimen/h5" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/select_red_gray_btn_bg_r1000"
        android:gravity="center"
        android:text="@string/back_homepage"
        android:textColor="@color/white" />

</LinearLayout>