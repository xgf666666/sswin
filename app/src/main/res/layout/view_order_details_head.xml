<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorGray"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorText"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/iv_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_name_title"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/home_btn_mine"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_14"
                android:layout_toRightOf="@+id/iv_name_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_14"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/iv_address_title"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/home_btn_address"
                android:layout_below="@+id/iv_name_title"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorText"
                android:layout_toRightOf="@+id/iv_address_title"
                android:layout_below="@+id/iv_name_title"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white"/>

</LinearLayout>