<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_image_viewer_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="48dp">
       <ImageButton
           android:id="@+id/ib_back_2"
           android:layout_width="50dp"
           android:layout_height="match_parent"
           android:background="@color/colorWhite"
           android:src="@mipmap/right_arrows"/>
       <TextView
           android:id="@+id/tv_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:textSize="18sp"
           android:textColor="@color/colorText"
           android:text=""

           android:layout_centerVertical="true"/>
       <ImageButton
           android:id="@+id/ib_delete"
           android:layout_width="50dp"
           android:layout_height="match_parent"
           android:layout_alignParentRight="true"
           android:background="@color/colorWhite"
           android:src="@drawable/icon_del_black_h"/>

   </RelativeLayout>

    <!--<com.antiphon.ydg.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.antiphon.ydg.widget.TitleBar>-->

    <FrameLayout
        android:id="@+id/fl_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.darsh.multipleimageselect.widget.PhotoViewPager
            android:id="@+id/vp_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.darsh.multipleimageselect.widget.PhotoViewPager>


    </FrameLayout>


</LinearLayout>
