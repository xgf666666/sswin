<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_classify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_classify"
        android:layout_toEndOf="@id/iv_classify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/iv_classify"
        android:layout_alignBottom="@+id/iv_classify"
        android:gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:textSize="@dimen/h5"
        android:textColor="@color/colorText"
        tools:text="美白" />
    
    <View
        android:id="@+id/line"
        android:layout_below="@+id/tv_classify"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_alignStart="@+id/tv_classify"
        android:layout_height="0.2dp"
        android:background="#aaaaaa" />
</RelativeLayout>