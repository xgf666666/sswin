<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.SplashTheme3">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ToolbarTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/colorText</item>
    </style>

    <style name="loading_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TransparentDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--&lt;!&ndash; 是否半透明 &ndash;&gt;-->
        <!--<item name="android:windowIsTranslucent">false</item>-->
        <!-- 是否没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--&lt;!&ndash; 是否浮现在activity之上 &ndash;&gt;-->
        <!--<item name="android:windowIsFloating">true</item>-->
        <!--&lt;!&ndash; 是否背景模糊 &ndash;&gt;-->
        <!--<item name="android:backgroundDimEnabled">false</item>-->
        <!--&lt;!&ndash; 设置背景模糊的透明度&ndash;&gt;-->
        <!--<item name="android:backgroundDimAmount">0.5</item>-->
    </style>

    <style name="Animation.Bottom.Rising" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="RadingStyle" parent="@android:style/Widget.RatingBar">
        <!-- 定义星星图片 -->
        <item name="android:progressDrawable">@drawable/layer_live_rating_bar</item>
        <!-- 根据自定义星星图片的大小,设置相应的值,否则可能显示不全 -->
        <item name="android:numColumns">5</item>
        //这里放一些你觉得公共的属性(你可以在控件里覆盖这里的属性)
    </style>

    <style name="fiveRatingBar" parent="@android:style/Widget.RatingBar">
        <!-- 定义星星图片 -->
        <item name="android:progressDrawable">@drawable/layer_live_rating_bar_2</item>
        <item name="android:numColumns">5</item>
    </style>

</resources>
